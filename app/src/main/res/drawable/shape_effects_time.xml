<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- Phần tạo hiệu ứng dropshadow -->
    <item>
        <shape>
            <corners
                android:bottomLeftRadius="2dp"
                android:bottomRightRadius="2dp"
                android:topLeftRadius="2dp"
                android:topRightRadius="2dp" >
            </corners>

            <solid android:color="#808080" />

            <padding
                android:bottom="5dp"
                android:left="0dp"
                android:right="5dp"
                android:top="0dp" />
        </shape>
    </item>
    <!-- Kết thúc phần tạo hiệu ứng dropshadow -->
    <item>
        <shape android:shape="rectangle" >
            <!--  Đổ màu gradient cho background với angle là 270, theo chiều dọc (linear)-->
            <gradient
                android:angle="270"
                android:centerColor="#FFFFFF"
                android:endColor="#C0C0C0"
                android:startColor="#FFFFFF"
                android:type="linear" />

            <!-- Bo tròn các góc với các thông số giống hoặc khác nhau -->
            <corners
                android:bottomLeftRadius="2dp"
                android:bottomRightRadius="2dp"
                android:topLeftRadius="2dp"
                android:topRightRadius="2dp" >
            </corners>
        </shape>
    </item>

</layer-list>