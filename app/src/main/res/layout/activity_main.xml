<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hinhnen1"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="com.nhuocquy.tracnghiemapp.activity.MainActivity">

    <TextView
        android:id="@+id/tvTillte"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/main_tittle"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorAccent"
        android:textSize="35dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Xin chÃ o Hoang Nhuoc Quy"
        android:id="@+id/tvXinChao"
        android:layout_gravity="center_horizontal"
        android:visibility="invisible" />

    <Button
        android:id="@+id/btnThiThu"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_effects"
        android:text="@string/main_thi_thu"
        android:textColor="#ffffff"
        android:textSize="16dp"
        />
    <Button
        android:id="@+id/btnThiThat"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        android:background="@drawable/shape_effects"
        android:text="@string/main_thi_that"
        android:textColor="#ffffff"
        android:textSize="16dp"
        />
    <Button
        android:id="@+id/btnXepHang"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        android:background="@drawable/shape_boder"
        android:text="@string/main_xep_hang"
        android:textColor="#ffffff"
        android:textSize="16dp"
        />
    <Button
        android:id="@+id/btnDangNhap"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        android:background="@drawable/shape_effects"
        android:text="@string/main_dang_nhap"
        android:textColor="#ffffff"
        android:textSize="16dp"
        />
    <Button
        android:id="@+id/btnDangKi"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        android:background="@drawable/shape_effects"
        android:text="@string/main_dang_ki"
        android:textColor="#ffffff"
        android:textSize="16dp"
        />


</LinearLayout>
